(function(A){A.fn.bubble=function(B){return this.each(function(){new A.bubble(this,B);});};A.bubble=function(C,B){this.el=A(C).get(0);this.options={inner:false};this.options=A.extend(B);this.props={classes:{overState:"on",hidden:"hide"},initial:true};this.elems={};this.init();};A.bubble.fn=A.bubble.prototype={};A.bubble.fn.extend=A.bubble.extend=jQuery.extend;A.bubble.fn.extend({init:function(){var B=A(this.el).children("p").html();B=B.replace(/\s/g,"&nbsp;");A(this.el).children("p").html(B);this.cacheElems();this.assignHandlers();},cacheElems:function(){this.elems.$bubbleParent=A(this.el).parent();this.elems.$bubbleContainer=A(this.el);},assignHandlers:function(){var B=this;this.elems.$bubbleParent.mouseenter(function(C){B.showBubble(B);B.props.initial=false;});this.elems.$bubbleParent.mouseleave(function(C){B.hideBubble(B);});},showBubble:function(B){this.elems.$bubbleParent.addClass(this.props.classes.overState);this.elems.$bubbleContainer.addClass(this.props.classes.overState);},hideBubble:function(B){this.elems.$bubbleParent.removeClass(this.props.classes.overState);this.elems.$bubbleContainer.removeClass(this.props.classes.overState);}});})(jQuery);